using System;

class Program
{
    static void Main(string[] args)
    {
        // Leitura do tempo gasto na viagem (em horas) e da velocidade média (em km/h)
        int tempoViagem = int.Parse(Console.ReadLine());
        int velocidadeMedia = int.Parse(Console.ReadLine());

        // Cálculo da distância percorrida (em km)
        double distancia = tempoViagem * velocidadeMedia;

        // Cálculo da quantidade de litros necessária
        double litrosNecessarios = distancia / 12.0;

        // Exibição do resultado com 3 casas decimais
        Console.WriteLine(litrosNecessarios.ToString("F3"));
    }
}
